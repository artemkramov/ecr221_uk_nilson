<script type="text/template" id="network-cell">
    <tbody>
    <% _.each(models,function(model) { %>
    <tr>
        <td><%= model.get('name') %></td>
        <td>
            <%
                var addr = model.get('addr');
                if (addr) {
                    if (!_.isString(addr)) addr = IP2Str(addr);
                    if (addr == '0.0.0.0') {
                        print(t('Off'));
                    } else print(['<b>', t('Active'), '.</b> IP:', addr].join(''));
                } else print(t('Off'));
            %>
        </td>
    </tr>
    <% }); %>
    </tbody>
</script>

